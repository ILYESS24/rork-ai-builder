# ===========================================
# RORK AI BUILDER - CONFIGURATION ENVIRONNEMENT
# ===========================================

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===========================================
# IA & LLMs
# ===========================================

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ===========================================
# AUTHENTIFICATION
# ===========================================

# Clerk (Recommandé)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# NextAuth (Alternative)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# ===========================================
# BASE DE DONNÉES
# ===========================================

# Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Prisma
DATABASE_URL="postgresql://username:password@localhost:5432/rork_ai_builder"

# ===========================================
# VECTOR DATABASE
# ===========================================

# Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_INDEX_NAME=rork-ai-builder
PINECONE_ENVIRONMENT=us-west1-gcp

# Weaviate (Alternative)
WEAVIATE_URL=https://your-cluster.weaviate.network
WEAVIATE_API_KEY=your-weaviate-api-key

# ===========================================
# PAIEMENTS
# ===========================================

# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Plan IDs
STRIPE_PRO_PRICE_ID=price_your-pro-price-id
STRIPE_ENTERPRISE_PRICE_ID=price_your-enterprise-price-id

# ===========================================
# MONITORING
# ===========================================

# Sentry
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# COLLABORATION TEMPS RÉEL
# ===========================================

# Socket.io
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Liveblocks
LIVEBLOCKS_SECRET_KEY=sk_live_your-liveblocks-secret-key
NEXT_PUBLIC_LIVEBLOCKS_PUBLISHABLE_KEY=pk_live_your-liveblocks-publishable-key

# ===========================================
# INTÉGRATIONS EXTERNES
# ===========================================

# GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Vercel
VERCEL_TOKEN=your-vercel-token

# ===========================================
# SÉCURITÉ
# ===========================================

# JWT
JWT_SECRET=your-jwt-secret-here

# Encryption
ENCRYPTION_KEY=your-encryption-key-here

# ===========================================
# LIMITES & QUOTAS
# ===========================================

# Free Plan
FREE_GENERATIONS_PER_MONTH=50
FREE_PROJECTS_LIMIT=5
FREE_STORAGE_LIMIT_MB=100

# Pro Plan
PRO_GENERATIONS_PER_MONTH=1000
PRO_PROJECTS_LIMIT=-1  # Illimité
PRO_STORAGE_LIMIT_MB=10240  # 10GB

# Enterprise Plan
ENTERPRISE_GENERATIONS_PER_MONTH=-1  # Illimité
ENTERPRISE_PROJECTS_LIMIT=-1  # Illimité
ENTERPRISE_STORAGE_LIMIT_MB=102400  # 100GB

# ===========================================
# CONFIGURATION AVANCÉE
# ===========================================

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ===========================================
# NOTES IMPORTANTES
# ===========================================

# 1. Remplacez toutes les valeurs "your-*-key-here" par vos vraies clés API
# 2. Ne commitez JAMAIS ce fichier .env.local dans Git
# 3. Utilisez des clés de test en développement
# 4. Configurez les clés de production dans Vercel/Netlify
# 5. Testez chaque intégration une par une
